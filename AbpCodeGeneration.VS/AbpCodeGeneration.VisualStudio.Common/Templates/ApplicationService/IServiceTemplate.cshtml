@using AbpCodeGeneration.VisualStudio.Common.Model
@inherits RazorEngine.Templating.TemplateBase<CreateFileInput>
using System.Threading.Tasks;
using Volo.Abp.Application.Dtos;
using Volo.Abp.Application.Services;
using @Model.Namespace.@(Model.DirectoryName).Dto;

namespace @Model.Namespace.@Model.DirectoryName
{
    /// <summary>
    /// @(Model.LocalName)管理
    /// </summary>
    public interface I@(Model.ClassName)AppService: IApplicationService
    {
        /// <summary>
        /// 获取
        /// </summary>
        /// <param name="id">主键</param>
        /// <returns></returns>
        Task<@(Model.ClassName)ListDto> GetAsync(@(Model.KeyType) id);

        /// <summary>
        /// 分页
        /// </summary>
        /// <param name="input">查询条件</param>
        /// <returns></returns>
        Task<PagedResultDto<@(Model.ClassName)ListDto>> GetListAsync(Get@(Model.ClassName)sInput input);

        /// <summary>
        /// 获取修改信息
        /// </summary>
        /// <param name="id">主键</param>
        /// <returns></returns>
        Task<Get@(Model.ClassName)ForEditOutput> GetEditAsync(@(Model.KeyType) id);

        /// <summary>
        /// 创建
        /// </summary>
        /// <param name="input"></param>
        /// <returns></returns>
        Task<@(Model.ClassName)ListDto> CreateAsync(@(Model.ClassName)CreateDto input);

        /// <summary>
        /// 更新
        /// </summary>
        /// <param name="id">主键</param>
        /// <param name="input"></param>
        /// <returns></returns>
        Task<@(Model.ClassName)ListDto> UpdateAsync(int id, @(Model.ClassName)UpdateDto input);

        /// <summary>
        /// 删除
        /// </summary>
        /// <param name="id">主键</param>
        /// <returns></returns>
        Task DeleteAsync(@(Model.KeyType) id);
    }
}